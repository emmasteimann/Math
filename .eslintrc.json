{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["math.js", "math.min.js"],
  "rules": {
    "quotes": ["error", "double"],
    "func-names": ["error", "never"],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "camelcase": ["error", {"allow": [".*"]}],
    "no-restricted-globals": 0,
    "comma-dangle": 0,
    "object-shorthand": 0,
    "prefer-rest-params": 0,
    "arrow-parens": 0
  }
}
